<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.darkes.scarnedice.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/score_text" />
            <!--android:text="Your Score: 0 Computer Score: 0" />-->
        <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="Computer score: 0" />-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/die_image_view"
            android:src="@drawable/dice1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <Button
           android:id="@+id/roll_button"
           android:text="@string/roll_button"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>

       <Button
           android:id="@+id/hold_button"
           android:text="@string/hold_button"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>

       <Button
           android:id="@+id/reset_button"
           android:text="@string/reset_button"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>
   </LinearLayout>

</LinearLayout>
